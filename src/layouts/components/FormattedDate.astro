---
interface Props {
  date: Date;
  enableTime?: boolean;
}

const { date, enableTime } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString("ja-JP", {
      year: "numeric",
      month: "short",
      day: "numeric",
      hour: enableTime ? "numeric" : undefined,
      minute: enableTime ? "numeric" : undefined,
      timeZone: "Asia/Tokyo",
    })
  }
</time>
