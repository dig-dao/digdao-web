---
interface Props {
  date: Date;
  enableTime?: boolean;
}

const { date, enableTime } = Astro.props;
console.log(date);
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString("ja", {
      year: "numeric",
      month: "short",
      day: "numeric",
      hour: enableTime ? "numeric" : undefined,
      minute: enableTime ? "numeric" : undefined,
    })
  }
</time>
